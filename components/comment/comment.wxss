/* 评论组件样式 */
.commentContainer {
    padding: 40rpx 20rpx;
  }
  
  .commentContainer .userContent {
    background-color: #fff;
    padding: 15rpx 15rpx 0 15rpx;
    border-radius: 5px;
  }
  
  .commentContainer .userContent .userInfo {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    margin-bottom: 15rpx;
  }
  
  .commentContainer .userContent .userInfo image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
  }
  
  .commentContainer .userContent .userInfo .userName {
    padding-left: 15rpx;
    padding-bottom: 2rpx;
    font-size: 36rpx;
    font-weight: bold;
    font-family: "楷体";
    color: rgb(143, 136, 136);
  }
  
  .commentContainer .userContent .title {
    font-size: 35rpx;
    font-family: "微软雅黑";
    color: #222;
    font-weight: 600;
    padding-bottom: 15rpx;
    display: inline-block;
  }
  
  .commentContainer .userContent .img image {
    width: 100%;
    height: 480rpx;
  }
  
  .commentContainer .sendComment {
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    text-indent: 10rpx;
    padding: 10rpx 15rpx;
  }
  
  .commentContainer .sendComment .commentBox {
    width: 100%;
    border: 1px solid #ccc;
    height: 150rpx;
    font-size: 25rpx;
    border-radius: 5px;
    background-color: #fff;
  }
  
  .commentContainer .commentBtn {
    margin-right: 0px;
    margin-top: 10rpx;
  }
  
  .commentContainer .commentListContainer {
    padding: 10rpx 15rpx;
  }
  
  .commentContainer .commentListContainer .commentList {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid rgb(224, 219, 219);
    padding-bottom: 10rpx;
    background-color: #fff;
    border-radius: 15px 0px;
    margin-bottom: 8px;
    box-shadow: 3px 3px 2px #ccc;
  }
  
  .commentContainer .commentListContainer .commentList .commentInfo {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    margin-bottom: 10rpx;
    margin-top: 20rpx;
    margin-left: 10rpx;
  }
  
  .commentContainer .commentListContainer .commentList .commentInfo image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
  }
  
  .commentContainer .commentListContainer .commentList .commentInfo .userName {
    padding-left: 15rpx;
    font-size: 30rpx;
    font-weight: bold;
    font-family: "微软雅黑";
    color: rgb(88, 21, 21);
  }
  
  .commentContainer .commentListContainer .commentList .commentContent {
    width: 90%;
    padding-left: 75rpx;
    font-size: 25rpx;
    font-family: "微软雅黑";
    color: black;
  }
  